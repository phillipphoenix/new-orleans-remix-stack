{
  "name": "new-orleans-remix-template",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:prisma": "prisma generate",
    "dev:remix": "remix dev",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "generate:css": "tailwindcss -i ./styles/tailwind.css -o ./app/generated.tailwind.css",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "typecheck": "tsc -b",
    "heroku-postbuild": "run-s build:* && npm run setup",
    "start": "remix-serve build"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/app/generated.tailwind.css",
    "/api",
    "/.cache",
    "/.vscode"
  ],
  "dependencies": {
    "@prisma/client": "^3.15.2",
    "@remix-run/node": "^1.6.1",
    "@remix-run/react": "^1.6.1",
    "@remix-run/vercel": "^1.6.1",
    "@remix-validated-form/with-zod": "^2.0.1",
    "@vercel/node": "^1.15.2",
    "framer-motion": "^6.3.16",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix-validated-form": "^4.5.0",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.17.3",
    "zod-form-data": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.1",
    "@remix-run/eslint-config": "^1.6.1",
    "@remix-run/serve": "^1.6.1",
    "@types/eslint": "^8.4.3",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "prisma": "^3.15.2",
    "tailwindcss": "^3.1.4",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
